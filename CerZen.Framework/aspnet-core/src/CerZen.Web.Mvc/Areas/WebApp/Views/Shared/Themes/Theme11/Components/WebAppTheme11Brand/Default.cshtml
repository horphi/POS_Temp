@using CerZen.Web.Areas.WebApp.Models.Layout
@using CerZen.Web.Areas.WebApp.Views.Shared.Components.WebAppLogo
@model HeaderViewModel
@{
    Layout = null;
    var skin = @Model.LoginInformations.Theme.BaseSettings.Layout.DarkMode ? "dark" : "light";
}

<a href="@Url.Action("Index", "Home", new {area = string.Empty})" target="_blank" class="brand-logo">
    @await Component.InvokeAsync(typeof(WebAppLogoViewComponent), new
    {
        LogoSkin = skin,
        logoClass = "theme-" + skin + "-show h-20px h-lg-30px"
    })
</a>