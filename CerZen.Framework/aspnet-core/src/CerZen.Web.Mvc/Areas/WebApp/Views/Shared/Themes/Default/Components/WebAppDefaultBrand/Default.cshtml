@using CerZen.Web.Areas.WebApp.Models.Layout
@using CerZen.Web.Areas.WebApp.Views.Shared.Components.WebAppLogo
@model HeaderViewModel
@{
    Layout = null;
    var theme = await GetTheme();
    var skin = theme.BaseSettings.Layout.DarkMode || theme.BaseSettings.Menu.AsideSkin == "dark" ? "dark" : "light";
}

<a href="@Url.Action("Index", "Home", new {area = string.Empty})">
    @await Component.InvokeAsync(typeof(WebAppLogoViewComponent), new {logoSkin = skin, logoClass = "h-25px app-sidebar-logo-default"})
    @await Component.InvokeAsync(typeof(WebAppLogoViewComponent), new {logoSkin = skin + "-sm", logoClass = "h-20px app-sidebar-logo-minimize"})
</a>