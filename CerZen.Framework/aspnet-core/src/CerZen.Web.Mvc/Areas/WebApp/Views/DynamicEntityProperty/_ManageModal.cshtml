@using CerZen.Web.Areas.WebApp.Models.Common.Modals
@using CerZen.Authorization
@model CerZen.Web.Areas.WebApp.Models.DynamicEntityProperty.CreateEntityDynamicPropertyViewModel

@await Html.PartialAsync("~/Areas/WebApp/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(""))

<div class="modal-body">

    @if (IsGranted(AppPermissions.Pages_Administration_DynamicEntityProperties_Create))
    {
        <div class="row text-end">
            <div class="col">
                <button id="CreateNewDynamicEntityProperty" class="btn btn-primary">
                    <i class="fa fa-plus btn-md-icon"></i> 
                    <span class="d-none d-md-inline-block">
                        @L("AddNewDynamicEntityProperty")
                    </span>
                </button>
            </div>
        </div>
    }
    
    <div class="align-items-center">
        <table class="table align-middle table-row-dashed fs-6 gy-5 dataTable dtr-inline no-footer ManageDynamicEntityPropertiesTable">
            <thead>
            <tr>
                <th class="w-100">@L("DynamicProperty")</th>
                <th class="w-10px"></th>
            </tr>
            </thead>
        </table>
    </div>
</div>

@await Html.PartialAsync("~/Areas/WebApp/Views/Common/Modals/_ModalFooterWithClose.cshtml")
